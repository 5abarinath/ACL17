	<script>
			var socket = io.connect('localhost:3000');

			var btnClickFlag = false, premiumBtnClickFlag = false;
			document.getElementById("bidBtn").addEventListener("click", function() {
				socket.emit('bidBtnClicked', getCookie("teamToken"));
				btnClickFlag = true;
			});

			document.getElementById("premiumBidBtn").addEventListener("click", function() {
				var HTMLTotalPremiumLeft = parseInt(document.getElementById("div-premLeft").innerHTML);;
				if(HTMLTotalPremiumLeft > 0) {
					socket.emit('premiumBidBtnClicked', getCookie("teamToken"));
					premiumBtnClickFlag = true;
					HTMLTotalPremiumLeft -= 2000;
					document.getElementById("div-premLeft").innerHTML = HTMLTotalPremiumLeft;
				}
				else
					alert("You do not have any premium amount left!");
			});
			
			socket.on('bidBtnClicked',function(data) {
				document.getElementById("div-currBid").innerHTML=data.currentBid;
				if(btnClickFlag) {
					document.getElementById("div-yourBid").innerHTML = data.currentBid;				
					btnClickFlag = false;
				}
				if(data.disableFlag) {
					var bbtn = document.getElementById("bidBtn");
					bbtn.disabled = true;
					bbtn.classList.remove("bg-red");
					bbtn.classList.add("bg-grey");
					var incrDiv = document.getElementById("bidIncrDiv");
					var incrVal = document.getElementById("bidIncrVal");
					incrVal.innerHTML = "2000";
					incrDiv.classList.remove("bg-orange");
					incrDiv.classList.add("bg-red");
					var TotalPremiumLeft = parseInt(document.getElementById("div-premLeft").getAttribute("data-to"));
					var HTMLTotalPremiumLeft = parseInt(document.getElementById("div-premLeft").innerHTML);
					if(TotalPremiumLeft < 2000 || HTMLTotalPremiumLeft < 2000)
						alert("You do not have enough premium left!");
					else {
						var pbtn = document.getElementById("premiumBidBtn");
						pbtn.disabled = false;
						pbtn.classList.remove("bg-grey");
						pbtn.classList.add("bg-red");
					}
				}
				var j;
				var currentTeam = "aclteam" + getCookie("teamToken");
				for(j=0; j<=10; j+=2) {
					if(data.ranks[j] == currentTeam)
						break;
				}
				var rank = (j/2)+1;
				document.getElementById('div-yourRank').setAttribute("data-to", rank);
				for(var i=0; i<=10; i+=2) {
					if(data.ranks[i] == "aclteam1")
						data.ranks[i] = "Aman Honda Ryders";
					else if(data.ranks[i] == "aclteam2")
						data.ranks[i] = "Ceratec Masters";
					else if(data.ranks[i] == "aclteam3")
						data.ranks[i] = "Fitness Mantras";
					else if(data.ranks[i] == "aclteam4")
						data.ranks[i] = "Maha Fast Champs";
					else if(data.ranks[i] == "aclteam5")
						data.ranks[i] = "Premier Titans";
					else
						data.ranks[i] = "Sun Shiners";
					document.getElementById("team"+i).innerHTML = data.ranks[i];
					document.getElementById("price"+i).innerHTML = data.ranks[i+1];
				}	
			});

